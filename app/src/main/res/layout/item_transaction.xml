<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left Side - Icon -->
        <ImageView
            android:id="@+id/ivTransactionIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/transaction_icon_background"
            android:padding="8dp"
            android:src="@drawable/ic_food_dining"
            android:contentDescription="Transaction icon" />

        <!-- Middle Section - Text Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTransactionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receipt"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvTransactionCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food &amp; Dining"
                android:textSize="14sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="July 31, 2025"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Right Side - Amount and Arrow -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTransactionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$55.26"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/expense_red"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_small"
                android:tint="@color/secondary_text" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 